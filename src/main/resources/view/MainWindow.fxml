<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="teddy.MainWindow"
            style="-fx-background-color: #F8F9FA;">
    <children>
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   onAction="#handleUserInput"
                   prefHeight="45.0"
                   prefWidth="320.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="10.0"
                   style="-fx-background-radius: 20px; -fx-padding: 8px; -fx-font-size: 14px;"/>

        <Button fx:id="sendButton"
                layoutX="335.0"
                layoutY="558.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="45.0"
                prefWidth="55.0"
                text="Send"
                AnchorPane.bottomAnchor="5.0"
                AnchorPane.rightAnchor="10.0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20px;"
                onMouseEntered="#handleMouseEnter"
                onMouseExited="#handleMouseExit"/>

        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    prefHeight="550.0"
                    prefWidth="400.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.bottomAnchor="60.0"
                    style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0"
                      spacing="10"
                      style="-fx-padding: 10px;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
